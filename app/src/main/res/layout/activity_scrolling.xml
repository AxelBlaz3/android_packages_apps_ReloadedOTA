<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ScrollingActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:fitsSystemWindows="true"
            android:layout_height="@dimen/app_bar_height"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <ImageView
            android:id="@+id/imageViewplaces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_toast" />

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="#000"
            app:layout_scrollFlags="scroll|exitUntilCollapsed" />

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_scrolling" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom|end"
            app:srcCompat="@drawable/ic_refresh"/>

    <TextView
        android:id="@+id/lat_link"
        android:layout_width="390dp"
        android:layout_height="126dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="230dp"
        android:layout_toEndOf="@id/latzip"
        android:autoLink="all"
        android:clickable="true"
        android:text=""
        android:textColor="#000"
        android:textSize="25sp" />


    <ProgressBar
        android:id="@+id/fetchbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        android:layout_marginStart="20dp"
        android:visibility="invisible"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="left|top" />

    <TextView
        android:id="@+id/yer_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="285dp"
        android:layout_toEndOf="@id/lat_link"
        android:text="@string/yerbuild"
        android:visibility="invisible"
        android:textColor="#000"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/yer_date"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="285dp"
        android:text=""
        android:textColor="#000"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/our_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="320dp"
        android:layout_toEndOf="@id/lat_link"
        android:text="@string/ourbuild"
        android:visibility="invisible"
        android:textColor="#000"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/our_date"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="320dp"
        android:layout_toEndOf="@id/lat_link"
        android:text=""
        android:textColor="#000"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/testing_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="355dp"
        android:layout_toEndOf="@id/lat_link"
        android:text="@string/testbuild"
        android:visibility="invisible"
        android:textColor="#000"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/testing_button"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="355dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:drawableStart="@android:drawable/stat_sys_warning"
        android:drawableTint="@android:color/holo_red_dark"
        android:fontFamily="sans-serif-black"
        android:text="@string/testing_buttontxt"
        android:visibility="invisible"
        android:textColor="@android:color/background_light"
        android:textStyle="italic" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>